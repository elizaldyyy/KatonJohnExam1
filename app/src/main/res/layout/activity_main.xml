<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button4"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/button6"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button7"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button4"
        android:layout_marginEnd="43dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="59dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Office notes"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/divider"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:text="Personal notes"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="19dp"
        android:gravity="center"
        android:text="Public notes"
        android:textSize="22dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="358dp"
        android:layout_height="3dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@color/white" />

    <View
        android:id="@+id/divider2"
        android:layout_width="358dp"
        android:layout_height="3dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="204dp"
        android:background="@color/white" />

    <View
        android:id="@+id/divider4"
        android:layout_width="141dp"
        android:layout_height="4dp"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@color/white" />

    <View
        android:id="@+id/divider6"
        android:layout_width="358dp"
        android:layout_height="3dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="204dp"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/divider"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-42dp"
        android:layout_marginEnd="51dp"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="39dp"
        android:layout_height="38dp"
        android:layout_above="@+id/divider"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="-48dp"
        app:srcCompat="?android:attr/actionModeCloseDrawable" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="48dp"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentTop="true"

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="37dp"
        android:layout_height="51dp"
        android:layout_alignEnd="@+id/divider"
        android:layout_alignParentTop="true"
        app:srcCompat="?android:attr/floatingToolbarOpenDrawable" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="192dp"
        android:layout_height="165dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="6dp"
        android:background="@color/maroon"
        android:text="                                                                         Note 1                                                              asdkjasdjkashdjashdfas" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="192dp"
        android:layout_height="101dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="183dp"
        android:background="@color/tan"
        android:text="                                                                         Note 1                                                              asdkjasdjkashdjashdfas" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="152dp"
        android:layout_height="202dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="-4dp"
        android:layout_toEndOf="@+id/button4"
        android:background="@color/yellow"
        android:text="                                                                                                            Attach a photo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="150dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginEnd="17dp"
        android:background="@color/brown"
        android:text="                                                                                                            Attach a photo" />
</RelativeLayout>